<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/button_nav_menu_vertical_size"
    tools:context=".ui.fragment.ChecklistFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_vertical_size"
        android:layout_marginBottom="@dimen/toolbar_vertical_size"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/teal_200"
        android:layout_marginStart="@dimen/checklist_button_margin_side"
        android:layout_marginBottom="@dimen/checklist_button_margin_bottom"
        android:text="@string/common_save"
        android:textSize="@dimen/checklist_button_text_size"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/teal_200"
        android:layout_marginEnd="@dimen/checklist_button_margin_side"
        android:layout_marginBottom="@dimen/checklist_button_margin_bottom"
        android:text="@string/common_add"
        android:textSize="@dimen/checklist_button_text_size"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>