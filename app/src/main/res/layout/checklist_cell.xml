<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp"
    android:layout_marginStart="@dimen/checklist_cell_margin"
    android:layout_marginEnd="@dimen/checklist_cell_margin">

    <CheckBox
    android:id="@+id/checkBox"
    android:layout_width="@dimen/checklist_button_size"
    android:layout_height="@dimen/checklist_button_size"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/common_add"
        android:autofillHints="@string/common_add"
        android:inputType="text"/>

    <ImageButton
        android:id="@+id/removeButton"
        android:layout_width="@dimen/checklist_button_size"
        android:layout_height="@dimen/checklist_button_size"
        android:layout_gravity="center_vertical"
        android:background="@drawable/baseline_cancel_24"
        android:contentDescription="@string/common_remove"/>
</LinearLayout>